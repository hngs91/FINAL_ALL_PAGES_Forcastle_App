<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--    Toolbar-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/alnwick_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:navigationIcon="@drawable/ic_back_arrow">

        <!--        The headline of this page, and set it up in center-->
        <TextView
            android:id="@+id/headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:layout_gravity="center"/>

    </androidx.appcompat.widget.Toolbar>

    <!--    Allow the screen to roll down, and set the scrollbars as invisible-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--            The pic of castle-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/pic_alnwick"
                android:scaleType="centerCrop"/>

            <!--            The background of the rest part below the castle pic-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/view_rounded_corner_box"
                android:layout_marginTop="-15dp"
                android:paddingTop="15dp">

                <!--                'Introduction' headline-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Introduction"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp" />

                <!--                'Introduction' text-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alnwick Castle,in Northumberland, UK, has been home to the Percy family for over 700 years as a film location for Harry Potter and Downton Abbey."
                    android:justificationMode="inter_word"
                    android:paddingLeft="20dp"
                    android:paddingRight="10dp"
                    android:layout_marginBottom="10dp" />

                <!--                Create a relative layout for ticket price part-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--                    The divide line on the right of ticket headline-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_centerInParent="true"
                        android:background="#dcdcdc" />

                    <!--                    ticket icon and headline of ticket-->
                    <!--                    the sequence of this and last textview couldn't change-->
                    <!--                    otherwise the divide line will cover on this text view-->
                    <TextView
                        android:id="@+id/ticket_headline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="#f5f5f5"
                        android:drawableLeft="@drawable/ic_ticket"
                        android:drawablePadding="10dp"
                        android:gravity="bottom"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="General Admission" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="right"
                    android:layout_below="@id/ticket_headline">

                    <!--                    because the text style of price texts are vary-->
                    <!--                    so they should be put into different textview-->
                    <!--                    'Adults: '-->
                    <TextView
                        android:id="@+id/price_text_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Adults: "
                        android:textStyle="bold" />

                    <!--                    '£19.50'-->
                    <TextView
                        android:id="@+id/price_text_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="£19.50"
                        android:layout_toRightOf="@id/price_text_1"/>

                    <!--                    ' | Children: '-->
                    <TextView
                        android:id="@+id/price_text_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | Children: "
                        android:textStyle="bold"
                        android:layout_toRightOf="@id/price_text_2"/>

                    <!--                    '£10.25'-->
                    <TextView
                        android:id="@+id/price_text_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/price_text_3"
                        android:paddingRight="10dp"
                        android:text="£10.25" />

                </RelativeLayout>

                <!--                Divide line between General Admission and Telephone number-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#dcdcdc"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

                <!--                Telephone number parts-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:drawableLeft="@drawable/ic_telephone"
                        android:drawablePadding="10dp"
                        android:text="Telephone number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="01665 511100" />

                </RelativeLayout>

                <!--                Divide line between Telephone number and Website-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#dcdcdc"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"/>

                <!--                Website parts-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:drawableLeft="@drawable/ic_website"
                        android:drawablePadding="10dp"
                        android:text="Website" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="alnwickcastle.com" />

                </RelativeLayout>

            </LinearLayout>

            <!--            The facilities suggestion parts-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#eeeeee"
                android:paddingTop="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <!--                The headline of facilities parts-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Facilities Available"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingLeft="10dp" />

                <!--                The first facility-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/view_facility_background"
                    android:layout_marginTop="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp">

                    <!--                    A pic of this facility-->
                    <ImageView
                        android:id="@+id/fac_ic_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_alnwick_costa_coffee" />

                    <!--                    The name of this facility-->
                    <TextView
                        android:id="@+id/fac_name_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/fac_ic_1"
                        android:text="Costa Coffee"
                        android:textStyle="bold" />

                    <!--                    The location of this facility-->
                    <TextView
                        android:id="@+id/fac_addr_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fac_name_1"
                        android:layout_toRightOf="@id/fac_ic_1"
                        android:text="Location: 69-71 Bondgate Within"
                        android:textSize="10dp"/>

                    <!--                    The first tags of this facility-->
                    <TextView
                        android:id="@+id/fac_1_tag_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/fac_name_1"
                        android:background="@drawable/view_tag_background"
                        android:padding="2dp"
                        android:text="coffee"
                        android:textColor="#7fc0db"
                        android:textSize="10dp" />

                    <!--                    The second tags of this facility-->
                    <TextView
                        android:id="@+id/fac_1_tag_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/fac_1_tag_1"
                        android:background="@drawable/view_tag_background"
                        android:padding="2dp"
                        android:text="casual"
                        android:textColor="#7fc0db"
                        android:textSize="10dp" />

                    <!--                    The star rating of this facility-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/fac_addr_1"
                        android:layout_marginRight="25dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_pentagram_1"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_pentagram_1"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_pentagram_1"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_pentagram_1"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_pentagram_1"/>

                    </LinearLayout>

                </RelativeLayout>

                <!--                The second facility-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/view_facility_background"
                    android:layout_marginTop="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp">

                    <!--                    A pic of second facility-->
                    <ImageView
                        android:id="@+id/fac_ic_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_alnwick_restaurant_at_the_castle" />

                    <!--                    The name of second facility-->
                    <TextView
                        android:id="@+id/fac_name_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/fac_ic_2"
                        android:text="Restaurant at the Castle"
                        android:textStyle="bold" />

                    <!--                    The location of second facility-->
                    <TextView
                        android:id="@+id/fac_addr_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fac_name_2"
                        android:layout_toRightOf="@id/fac_ic_2"
                        android:text="Location: 18 Narrowgate"
                        android:textSize="10dp"/>

                    <!--                    The first tags of second facility-->
                    <TextView
                        android:id="@+id/fac_2_tag_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/fac_name_2"
                        android:background="@drawable/view_tag_background"
                        android:padding="2dp"
                        android:text="restaurant"
                        android:textColor="#7fc0db"
                        android:textSize="10dp" />

                    <!--                    The second tags of second facility-->
                    <TextView
                        android:id="@+id/fac_2_tag_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/fac_2_tag_1"
                        android:background="@drawable/view_tag_background"
                        android:padding="2dp"
                        android:text="bar"
                        android:textColor="#7fc0db"
                        android:textSize="10dp" />

                    <!--                    The star rating of second facility-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/fac_addr_2"
                        android:layout_marginRight="25dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_pentagram_1"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_pentagram_1"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_pentagram_1"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_pentagram_1"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_pentagram_2"/>

                    </LinearLayout>

                </RelativeLayout>

                <!--                The third facility-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/view_facility_background"
                    android:layout_marginTop="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp">

                    <!--                    A pic of third facility-->
                    <ImageView
                        android:id="@+id/fac_ic_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_alnwick_carlos" />

                    <!--                    The name of this facility-->
                    <TextView
                        android:id="@+id/fac_name_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/fac_ic_3"
                        android:text="Carlo's"
                        android:textStyle="bold" />

                    <!--                    The location of this facility-->
                    <TextView
                        android:id="@+id/fac_addr_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fac_name_3"
                        android:layout_toRightOf="@id/fac_ic_3"
                        android:text="Location: 7-9 Market St"
                        android:textSize="10dp"/>

                    <!--                    The first tags of this facility-->
                    <TextView
                        android:id="@+id/fac_3_tag_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_toRightOf="@id/fac_name_3"
                        android:background="@drawable/view_tag_background"
                        android:padding="2dp"
                        android:text="fish&amp;chips"
                        android:textColor="#7fc0db"
                        android:textSize="10dp" />

                    <!--                    The second tags of this facility-->
                    <TextView
                        android:id="@+id/fac_3_tag_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:padding="2dp"
                        android:layout_toRightOf="@id/fac_3_tag_1"
                        android:background="@drawable/view_tag_background"
                        android:text="bar"
                        android:textSize="10dp"
                        android:textColor="#7fc0db"/>

                    <!--                    The third tags of this facility-->
                    <TextView
                        android:id="@+id/fac_3_tag_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:padding="2dp"
                        android:layout_toRightOf="@id/fac_3_tag_2"
                        android:background="@drawable/view_tag_background"
                        android:text="takeaway"
                        android:textSize="10dp"
                        android:textColor="#7fc0db"/>

                    <!--                    The star rating of this facility-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/fac_addr_3"
                        android:layout_marginRight="25dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_pentagram_1"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_pentagram_1"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_pentagram_1"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_pentagram_1"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_pentagram_2"/>

                    </LinearLayout>

                </RelativeLayout>

                <!--                Divide line between facilities suggestion and PROCEED button-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#dcdcdc"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/alnwick_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="10dp"
                    android:text="PROCEED"
                    android:textColor="#ffffff"
                    android:background="@drawable/view_button_background"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>