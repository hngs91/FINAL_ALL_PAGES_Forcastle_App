                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="3h" />

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="9dp"
                                    android:src="@drawable/ic_bound_arrow_2" />

                                <!--                            transfer number-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Direct"/>

                            </LinearLayout>

                            <!--                        arrival time-->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="10:00"
                                android:textColor="#000000"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <!--                    ticket price-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1">

                            <!--                        adult price-->
                            <TextView
                                android:id="@+id/busAdultPrice5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="£8.00(Adult)"
                                android:textColor="#000000"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <!--                        child price-->
                            <TextView
                                android:id="@+id/busChildPrice5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="£4.00(Child)"
                                android:textColor="#000000"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <!--                Divide line between General Admission and Telephone number-->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#dcdcdc"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp">

                        <!--                    first operation company-->
                        <ImageView
                            android:id="@+id/first_company"
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/temp_ic_bus_company" />

                        <!--                    second operation company-->
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="30dp"
                            android:src="@drawable/temp_ic_bus_company"
                            android:layout_toRightOf="@id/first_company"/>


                        <!--                    buy ticket button-->
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="#00000000"
                            android:drawableRight="@drawable/ic_buy_ticket_arrow"
                            android:text="To buy" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>



        </ScrollView>

    </LinearLayout>

</LinearLayout>