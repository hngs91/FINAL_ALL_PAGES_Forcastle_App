        android:layout_width="46dp"
        android:layout_height="74dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/logo_blue"
        app:layout_constraintBottom_toTopOf="@+id/bookTripButton"
        app:layout_constraintEnd_toStartOf="@+id/forcastle2" />

    <ImageView
        android:id="@+id/forcastle2"
        android:layout_width="141dp"
        android:layout_height="26dp"
        android:layout_marginTop="17dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/forcastle"
        android:backgroundTint="#1245aa"
        app:layout_constraintBottom_toTopOf="@+id/bookTripButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.596"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passengers" />

    <ImageView
        android:id="@+id/add1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:onClick="increment1"
        android:src="@drawable/ic_add_1"
        app:layout_constraintEnd_toEndOf="@+id/passengers"
        app:layout_constraintTop_toTopOf="@+id/passengers" />

    <TextView
        android:id="@+id/adultTickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="14dp"
        android:text="1"
        android:textColor="#073590"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/add1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/minus2"
        app:layout_constraintTop_toTopOf="@+id/passengers" />

    <ImageView
        android:id="@+id/minus2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="184dp"
        android:layout_marginTop="28dp"
        android:onClick="decrement1"
        android:src="@drawable/ic_minus_2"
        app:layout_constraintStart_toEndOf="@+id/Adult"
        app:layout_constraintTop_toTopOf="@+id/passengers" />

    <ImageView
        android:id="@+id/childAdd1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="17dp"
        android:onClick="increment2"
        android:src="@drawable/ic_add_1"
        app:layout_constraintBottom_toBottomOf="@+id/passengers"
        app:layout_constraintEnd_toEndOf="@+id/passengers" />

    <TextView
        android:id="@+id/childTickets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="14dp"
        android:text="0"
        android:textColor="#073590"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/passengers"
        app:layout_constraintEnd_toStartOf="@+id/childAdd1"
