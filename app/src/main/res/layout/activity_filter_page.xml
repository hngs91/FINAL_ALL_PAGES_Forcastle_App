        android:textAlignment="viewStart"
        android:textColor="#1c4698"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/timeSection"
        app:layout_constraintStart_toStartOf="@+id/timeSection"
        app:layout_constraintTop_toBottomOf="@+id/departureTime" />

    <TextView
        android:id="@+id/departureTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="252dp"
        android:layout_marginBottom="48dp"
        android:text="Departure Time"
        android:textColor="#7d7d7d"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/timeSection"
        app:layout_constraintEnd_toEndOf="@+id/timeSection"
        app:layout_constraintStart_toStartOf="@+id/timeSection"
        app:layout_constraintTop_toTopOf="@+id/timeSection"
        app:layout_constraintVertical_bias="0.0" />


