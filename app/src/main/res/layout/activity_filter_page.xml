        android:textColor="#7d7d7d"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Adult"
        app:layout_constraintEnd_toEndOf="@+id/passengers"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/passengers"
        app:layout_constraintTop_toTopOf="@+id/passengers"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bookTripButton"
        android:layout_width="286dp"
        android:layout_height="45dp"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/view_button_background"
