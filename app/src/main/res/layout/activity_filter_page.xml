        android:layout_marginEnd="316dp"
        android:text=" Child"
        android:textColor="#7d7d7d"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/passengers"
        app:layout_constraintStart_toStartOf="@+id/passengers"
        app:layout_constraintTop_toTopOf="@+id/passengers" />

    <TextView
        android:id="@+id/childDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="18dp"
        android:text="2-15 years"
        android:textColor="#7d7d7d"
        android:textSize="10sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/passengers"
        app:layout_constraintStart_toStartOf="@+id/passengers"
        app:layout_constraintTop_toTopOf="@+id/passengers"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
